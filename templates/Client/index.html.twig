{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block body %}
    <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <button onclick="history.back()" class="btn btn-secondary">Retour</button>
        <h1 class="text-center">Liste des Clients</h1>
        <div style="width: 800px"></div>
    </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Num</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Tel</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ client.id }}</td>
                        <td>{{ client.numClient }}</td>
                        <td>{{ client.nom }}</td>
                        <td>{{ client.prenom }}</td>
                        <td>{{ client.adresse }}</td>
                        <td>{{ client.tel }}</td>

                        <td>
                            <a href="{{ path('app_salarie_controller2_edit', {'id': client.id}) }}" class="btn btn-primary">Ã‰diter</a>
                            <a href="{{ path('app_salarie_controller2_delete', {'id': client.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_client_controller2_new') }}" class="btn btn-success">Ajouter un client</a>
    </div>
{% endblock %}